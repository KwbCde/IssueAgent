# OpenAI API Key (get from https://platform.openai.com/account/api-keys)
OPENAI_API_KEY=your-openai-key-here

# Optional: Custom OpenAI Base URL (eg. using Azure/OpenRouter)
OPENAI_BASE_URL=https://api.openai.com/v1

# GitHub App ID (for JWT generation)
GITHUB_APP_ID=your-github-app-id-here

# GitHub App Private Key (multiline, use \n for new lines)
GITHUB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# GitHub Webhook secret (used for signature verification)
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# GitHub token generated from your bot account (repo + issues + public_repo scopes)
GITHUB_TOKEN=your-github-bot-token-here

# GitHub username of the bot account (prevents bot replying to itself)
BOT_USERNAME=your-github-bot-username
